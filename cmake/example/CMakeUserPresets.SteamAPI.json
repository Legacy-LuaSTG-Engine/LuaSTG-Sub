{
  "version": 6,
  "configurePresets": [
    {
      "name": "my-steam-api",
      "hidden": true,
      "cacheVariables": {
        "LUASTG_STEAM_API_ENABLE": {
          "type": "BOOL",
          "value": "TRUE"
        },
        "LUASTG_STEAM_API_APP_ID": {
          "type": "STRING",
          "value": "123456"
        },
        "LUASTG_STEAM_API_FORCE_LAUNCH_BY_STEAM": {
          "type": "BOOL",
          "value": "TRUE"
        }
      }
    },
    {
      "name": "vs2022-amd64-my-steam-api",
      "inherits": [
        "vs2022",
        "my-steam-api"
      ],
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/amd64-my-steam-api"
    }
  ],
  "buildPresets": [
    {
      "name": "windows-amd64-my-steam-api",
      "hidden": true,
      "configurePreset": "vs2022-amd64-my-steam-api"
    },
    {
      "name": "windows-amd64-my-steam-api-debug",
      "inherits": [
        "windows-amd64-my-steam-api",
        "debug",
        "target-luastg"
      ]
    },
    {
      "name": "windows-amd64-my-steam-api-release",
      "inherits": [
        "windows-amd64-my-steam-api",
        "release",
        "target-luastg"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "windows-amd64-my-steam-api-release",
      "steps": [
        {
          "type": "configure",
          "name": "vs2022-amd64-my-steam-api"
        },
        {
          "type": "build",
          "name": "windows-amd64-my-steam-api-release"
        }
      ]
    }
  ]
}