{
  "version": 6,
  "configurePresets": [
    {
      "name": "cpm-cache",
      "hidden": true,
      "cacheVariables": {
        "CPM_SOURCE_CACHE": {
          "type": "PATH",
          "value": "${sourceDir}/build/packages"
        }
      }
    },
    {
      "name": "link-steam-api",
      "hidden": true,
      "cacheVariables": {
        "LUASTG_STEAM_API_ENABLE": {
          "type": "BOOL",
          "value": "TRUE"
        }
      }
    },
    {
      "name": "vs2022",
      "hidden": true,
      "inherits": [
        "cpm-cache"
      ],
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "vs2022-x86",
      "inherits": [
        "vs2022"
      ],
      "architecture": "Win32",
      "binaryDir": "${sourceDir}/build/x86"
    },
    {
      "name": "vs2022-amd64",
      "inherits": [
        "vs2022"
      ],
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/amd64"
    },
    {
      "name": "vs2022-arm64",
      "inherits": [
        "vs2022"
      ],
      "architecture": "ARM64",
      "binaryDir": "${sourceDir}/build/arm64"
    },
    {
      "name": "vs2022-x86-steam",
      "inherits": [
        "vs2022",
        "link-steam-api"
      ],
      "architecture": "Win32",
      "binaryDir": "${sourceDir}/build/x86-steam"
    },
    {
      "name": "vs2022-amd64-steam",
      "inherits": [
        "vs2022",
        "link-steam-api"
      ],
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/amd64-steam"
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "hidden": true,
      "configuration": "Debug"
    },
    {
      "name": "release",
      "hidden": true,
      "configuration": "Release"
    },
    {
      "name": "windows-x86",
      "hidden": true,
      "configurePreset": "vs2022-x86"
    },
    {
      "name": "windows-amd64",
      "hidden": true,
      "configurePreset": "vs2022-amd64"
    },
    {
      "name": "windows-arm64",
      "hidden": true,
      "configurePreset": "vs2022-arm64"
    },
    {
      "name": "windows-x86-steam",
      "hidden": true,
      "configurePreset": "vs2022-x86-steam"
    },
    {
      "name": "windows-amd64-steam",
      "hidden": true,
      "configurePreset": "vs2022-amd64-steam"
    },
    {
      "name": "target-luastg",
      "hidden": true,
      "targets": [
        "LuaSTG"
      ]
    },
    {
      "name": "windows-x86-debug",
      "inherits": [
        "windows-x86",
        "debug",
        "target-luastg"
      ]
    },
    {
      "name": "windows-x86-release",
      "inherits": [
        "windows-x86",
        "release",
        "target-luastg"
      ]
    },
    {
      "name": "windows-amd64-debug",
      "inherits": [
        "windows-amd64",
        "debug",
        "target-luastg"
      ]
    },
    {
      "name": "windows-amd64-release",
      "inherits": [
        "windows-amd64",
        "release",
        "target-luastg"
      ]
    },
    {
      "name": "windows-arm64-debug",
      "inherits": [
        "windows-arm64",
        "debug",
        "target-luastg"
      ]
    },
    {
      "name": "windows-arm64-release",
      "inherits": [
        "windows-arm64",
        "release",
        "target-luastg"
      ]
    },
    {
      "name": "windows-x86-steam-debug",
      "inherits": [
        "windows-x86-steam",
        "debug",
        "target-luastg"
      ]
    },
    {
      "name": "windows-x86-steam-release",
      "inherits": [
        "windows-x86-steam",
        "release",
        "target-luastg"
      ]
    },
    {
      "name": "windows-amd64-steam-debug",
      "inherits": [
        "windows-amd64-steam",
        "debug",
        "target-luastg"
      ]
    },
    {
      "name": "windows-amd64-steam-release",
      "inherits": [
        "windows-amd64-steam",
        "release",
        "target-luastg"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "windows-x86-release",
      "steps": [
        {
          "type": "configure",
          "name": "vs2022-x86"
        },
        {
          "type": "build",
          "name": "windows-x86-release"
        }
      ]
    },
    {
      "name": "windows-amd64-release",
      "steps": [
        {
          "type": "configure",
          "name": "vs2022-amd64"
        },
        {
          "type": "build",
          "name": "windows-amd64-release"
        }
      ]
    },
    {
      "name": "windows-arm64-release",
      "steps": [
        {
          "type": "configure",
          "name": "vs2022-arm64"
        },
        {
          "type": "build",
          "name": "windows-arm64-release"
        }
      ]
    },
    {
      "name": "windows-x86-steam-release",
      "steps": [
        {
          "type": "configure",
          "name": "vs2022-x86-steam"
        },
        {
          "type": "build",
          "name": "windows-x86-steam-release"
        }
      ]
    },
    {
      "name": "windows-amd64-steam-release",
      "steps": [
        {
          "type": "configure",
          "name": "vs2022-amd64-steam"
        },
        {
          "type": "build",
          "name": "windows-amd64-steam-release"
        }
      ]
    }
  ]
}